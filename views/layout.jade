doctype html
html
  head
    title Blog
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    header
      h1= title
    nav
      if user
        span 您好，#{user.name}
      span: a(title="主页", href="/") home
      span: a(title="存档", href="/archive") archive
      span: a(title="标签", href="/tags") tags
      if user
        span: a(title="发表" href="/post") post
        span: a(title="登出" href="/logout") logout
      else
        span: a(title="登录", href="/login") login
        span: a(title="注册", href="/reg") register
      span
        form(action="/search", method="GET")
          input.search(type="text", name="keyword", placeholder="SEARCH")
    article
      if success
        div #{success}
      if error
        div #{error}
      block content