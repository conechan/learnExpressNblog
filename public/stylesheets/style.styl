*
  padding: 0
  margin: 0
body
  width: 600px
  margin: 2em auto
  padding: 0 2em
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
p
  line-height: 24px
  margin: 1em 0
header
  padding: .5em 0
  border-bottom: 1px solid #CCCCCC
nav
  position: fixed
  left: 12em
  font: 1.1em
  text-transform: uppercase
  width: 9em
  text-align: right
nav a
  display: block
  text-decoration: none
  padding: .7em 1em
  color: #000000
  &:hover
    background-color: #c1fffc
    color: #c5c69c
    -moz-transition: color .2s linear
article
  font: 16px
  padding-top: .5em
article a
  color: #DD0000
  text-decoration: none
  &:hover
    color: #333333
    text-decoration: underline
.info
  font: 14px
.edit
  margin: 3px
  padding: 2px 5px
  border-radius: 3px
  background-color: #F3F3F3
  color: #333333
  font-size: 13px
  &:hover
    text-decoration: none
    background-color: #c1fffc
    color: #c5c69c
    -moz-transition: color .2s linear

paging()
  text-decoration: none
  padding: .5em 1em
  color: #ff0000
  font-weight: bold
  &:hover
    text-decoration: none
    background-color: #ff0000
    color: #f9f9f9
    -moz-transition: color .2s linear
.prepage a
  float: left
  paging()
.nextpage a
  float: right
  paging()

.archive
  list-style: none
  line-height: 28px
.archive h3
  margin: 0.5em 0
.archive time
  float: left
  font-size: 14px
  color: #999999
  margin-right: 1.2em

.tag
  background-color: #ff0000
  border-radius: 3px
  font-size: 14px
  color: #ffffff
  display: inline-block
  padding: 0 5px
  margin-bottom: 8px
  margin-right: 5px
  &:hover
    text-decoration: none
    background-color: #ffffff
    color: #000000
    -moz-transition: color .2s linear

.search
  border: 0
  width: 6em;
  text-align: center
  font-size: 1em
  margin: 0.5em 0

_head()
 -moz-box-shadow: 0px 1px 4px #888888
.l_head
  float: left
  margin-left: -4em
  _head()
.r_head
  float: right
  margin-right: -2.5em
  _head()
